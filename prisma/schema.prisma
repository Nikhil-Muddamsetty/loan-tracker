generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum InterestType {
  SIMPLE
  COMPOUND
}

enum RepaymentFrequency {
  YEARLY
  HALF_YEARLY
  QUARTERLY
  MONTHLY
  BI_WEEKLY
  WEEKLY
  DAILY
}

enum TermType {
  DAYS
  WEEKS
  MONTHS
  YEARS
}

enum LoanStatus {
  ACTIVE
  COMPLETED
  DEFAULTED
  CANCELLED
}

model Loan {
  id                    Int                     @id @default(autoincrement())
  currency              String
  amount                Float
  interest_rate         Float
  interest_type         InterestType            @default(SIMPLE)
  repayment_freqeuncy   RepaymentFrequency
  term_type             TermType
  term                  Int
  lent_on               DateTime
  created_at            DateTime                 @default(now())
  updated_at            DateTime                 @updatedAt
  status                LoanStatus?              @default(ACTIVE)
  mark_for_deletion     Boolean?                 @default(false)
}